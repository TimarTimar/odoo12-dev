<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--customer form view -->
    <record id="customer_form" model="ir.ui.view">
        <field name="name">Name</field>
        <field name="model">customer.customer</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="book_ids" widget="many2many_tags"/>
                        </group>
                    </group>
                </sheet>

            </form>
        </field>
    </record>
    <record id="customer_tree" model="ir.ui.view">
        <field name="name">Name</field>
        <field name="model">customer.customer</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="book_ids" widget="many2many_tags"/>
            </tree>
        </field>
    </record>
    <record id="customer_action" model="ir.actions.act_window">
        <field name="name">customer</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">customer.customer</field>
        <field name="view_mode">tree,form</field>
    </record>
    <menuitem id="customer_menu" name="customer" parent="rent_menu" sequence="4" action="customer_action"></menuitem>
</odoo>